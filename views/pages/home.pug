extends ../base.pug

block variables
  - var template = 'home'
block content
  .home
    .home__wrapper
      //.home__titles
        each myth, index in myths
          .home__titles__label=`${Numbers(index)}`
          .home__titles__title=myth.data.title

      .home__gallery
        each media in home.data.gallery
          figure.home__gallery__media
            img.home__gallery__media__image(alt=media.image.alt src=media.image.url)

      .home__button
        a(href=Link(home.data.myths))= home.data.button
