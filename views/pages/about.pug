extends ../base.pug

block variables
  - var template = 'about'

block content
  .about
    .about__wrapper
      .about__titles
        h1.about__titles=about.data.title

      each section in about.data.body
        if section.slice_type == 'what_is_myth_creation'
          section.about__what__wrapper
            p.about__what__label=section.primary.label

            p.about__what__text=section.primary.text

            figure.about__what__media
              img.about__what__media__image(alt=section.primary.image.alt src=section.primary.image.url)


        if section.slice_type == 'content'
          section.about__content
            .about__content__wrapper
              p.about__content__label=section.primary.label

              .about__content__description_how!=PrismicDOM.RichText.asHtml(section.primary.description_how)

              figure.about__content__media
                img.about__content__media__image(alt=section.primary.image.alt src=section.primary.image.url)

        if section.slice_type == 'highlight'
          section.about__highlight
            .about__highlight__wrapper
              if section.primary.label
                //currently does not have a label. perhaps add?
                p.about__highlight__label=section.primary.label

              h3.about__highlight__highlight=section.primary.highlight

        if section.slice_type == 'gallery'
          section.about__gallery
            .about__gallery__wrapper
              each media in section.items
                figure.about__gallery__media
                  img.about__gallery__media__image(alt=media.image.alt src=media.image.url)

      .home__button
        a(href=Link(about.data.myths))= about.data.button
